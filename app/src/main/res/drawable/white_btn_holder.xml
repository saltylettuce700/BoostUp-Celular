<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo blanco del shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/base_gray" /> <!-- Color de fondo -->
        </shape>
    </item>

    <!-- Borde negro solo en la parte inferior -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Color del borde inferior -->
        </shape>
    </item>
</layer-list>
